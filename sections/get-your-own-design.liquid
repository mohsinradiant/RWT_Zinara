<div class="page-width own-design-container">
  <h2 class="section-heading">{{ section.settings.heading }}</h2>
  <div class="own-design-images-container">
    <div class="own-design-image">
      <img src="https://cdn.shopify.com/s/files/1/0661/8336/4792/files/image_50_1.png?v=1741840345">
      <h3>Conceptualise</h3>
      <p>We put together ides to create design concepts for you</p>
    </div>
    <div class="own-design-image">
      <img src="https://cdn.shopify.com/s/files/1/0661/8336/4792/files/image_50_1.png?v=1741840345">
      <h3>Design Approval</h3>
      <p>We sketch the ideas for your approval</p>
    </div>
    <div class="own-design-image">
      <img src="https://cdn.shopify.com/s/files/1/0661/8336/4792/files/image_50_1.png?v=1741840345">
      <h3>Production</h3>
      <p>Your jewelley design goes into production</p>
    </div>
  </div>
  <h2 class="section-heading">{{ section.settings.heading_2 }}</h2>
  <ul>
    <li>Diamond Size</li>
    <li>Carat</li>
    <li>Cut</li>
  </ul>
</div>
<style>
  .own-design-container {
    margin-top: 90px;
  }
  .own-design-images-container {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 90px;
  }
  .own-design-image {
    width: 32%;
  }
  .own-design-image img {
    width: 100%;
  }
  .own-design-image h3 {
    text-align: center;
    font-size: 2.6rem;
    margin: 13px 0 0;
    font-family: 'Quicksand';
  }
  .own-design-image p {
    text-align: center;
    font-size: 2rem;
    margin: 7px 0 0;
    line-height: 2.7rem;
    color: #121212;
  }
</style>
{% schema %}
{
  "name": "Own Design Content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "How it works"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Section Heading 2",
      "default": "Pick your own:"
    }
  ],
  "presets": [
    {
      "name": "Own Design Content"
    }
  ]
}
{% endschema %}
