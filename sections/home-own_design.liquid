<section class="home-try-at-home-section-container">
  <div class="page-width home-try-at-home-section">
    <div class="home-try-at-home-section-left">
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
      <p>{{ section.settings['sub-heading'] }}</p>
      <div>
        <a href="{{section.settings.url-1}}">{{ section.settings['button-1'] }}</a>
      </div>
    </div>
    <div class="home-try-at-home-section-right">
      <img src="{{ section.settings.image | img_url: 'medium' }}" alt="Try at Home">
    </div>
  </div>
</section>

<style>
  .home-try-at-home-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .home-try-at-home-section-left {
    display: flex;
    flex-direction: column;
    align-items: start;
    width: 50%;
    gap: 30px;
  }
  .home-try-at-home-section-left div {
    display: flex;
    gap: 20px;
  }
  .home-try-at-home-section-right {
    width: 30%;
  }
  .home-try-at-home-section-right img {
    width: 100%;
  }

  .home-try-at-home-section-left a {
    border: solid 1px #610c27;
    background: transparent;
    text-decoration: none;
    color: #610c27;
    padding: 15px 30px;
    font-size: 1.5rem;
    transition: all ease-in 0.3s;
    cursor: pointer;
  }
  .home-try-at-home-section-left a:hover {
    background: #610c27;
    color: white;
  }
</style>

{% schema %}
{
  "name": "Get Own Design",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Get your own design"
    },
    {
      "type": "text",
      "id": "sub-heading",
      "label": "Sub Heading",
      "default": "Have another design in mind? Something from a website or a magazine perhaps?"
    },
    {
      "type": "text",
      "id": "button-1",
      "label": "Button 1 Text",
      "default": "Start Designing"
    },
    {
      "type": "url",
      "id": "url-1",
      "label": "Button 1 URL"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Get Own Design",
      "category": "Custom"
    }
  ]
}
{% endschema %}
