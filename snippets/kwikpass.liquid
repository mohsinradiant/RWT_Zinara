  }

  function getThemeId() {
    {% if theme %}
    return {{ theme.id | json }};
    {% else %}
    return null;
    {% endif %}
  }

  window.merchantInfo  = {
    ...window.merchantInfo,
    mid: "4y6fima17b5l2",
